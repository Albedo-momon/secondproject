<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/milkname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/david_libre"
                android:gravity="center_horizontal"
                android:text="Product Name"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.191"
                app:layout_constraintStart_toEndOf="@+id/milkimage"
                app:layout_constraintTop_toTopOf="@+id/milkimage" />

            <ImageView
                android:id="@+id/milkimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/milkname"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/milkprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/milkimage"
                android:fontFamily="@font/david_libre"
                android:gravity="center_horizontal"
                android:text="Price"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/milkprice2"
                app:layout_constraintTop_toBottomOf="@+id/milkprice2" />

            <TextView
                android:id="@+id/saving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="savings"
                android:textColor="#304FFE"
                app:layout_constraintEnd_toEndOf="@+id/milkprice"
                app:layout_constraintTop_toBottomOf="@+id/milkprice" />

            <TextView
                android:id="@+id/milkprice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/milkimage"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/david_libre"
                android:gravity="center_horizontal"
                android:text="MRP"
                android:textColor="@color/colorblack"
                android:textSize="15sp"

                app:layout_constraintBottom_toBottomOf="@+id/quantity"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/milkdisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/milkprice"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/david_libre"
                android:gravity="center_horizontal"
                android:text="Product Discription....."
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/fruitimage"
                app:layout_constraintTop_toBottomOf="@+id/milkimage" />

            <TextView
                android:id="@+id/buymilknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/milkdisc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient1"
                android:fontFamily="@font/david_libre"
                android:padding="10dp"
                android:text="Buy Now"
                android:textColor="@color/colorwhite"
                app:layout_constraintEnd_toEndOf="@+id/saving"
                app:layout_constraintTop_toBottomOf="@+id/saving" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/david_libre"
                android:text="Quantity"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/milkname"
                app:layout_constraintTop_toBottomOf="@+id/milkname" />

            <TextView
                android:id="@+id/milkunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/david_libre"
                android:text="Unit"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/quantity"
                app:layout_constraintHorizontal_bias="0.423"
                app:layout_constraintStart_toStartOf="@+id/quantity"
                app:layout_constraintTop_toBottomOf="@+id/quantity" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>