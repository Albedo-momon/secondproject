<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/fruitname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Product Name"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:fontFamily="@font/david_libre"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.191"
                app:layout_constraintStart_toEndOf="@+id/fruitimage"
                app:layout_constraintTop_toTopOf="@+id/fruitimage" />

            <ImageView
                android:id="@+id/fruitimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/fruitname"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fruitprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fruitimage"
                android:fontFamily="@font/david_libre"
                android:gravity="center_horizontal"
                android:text="Price"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/fruitprice2"
                app:layout_constraintTop_toBottomOf="@+id/fruitprice2" />


            <TextView
                android:id="@+id/saving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="savings"
                android:textColor="#304FFE"
                app:layout_constraintEnd_toEndOf="@+id/fruitprice"
                app:layout_constraintTop_toBottomOf="@+id/fruitprice" />

            <TextView
                android:id="@+id/fruitprice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fruitimage"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/david_libre"
                android:gravity="center_horizontal"
                android:text="MRP"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/quantity"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/fruitdisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fruitprice"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/david_libre"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Product Discription....."
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/fruitimage"
                app:layout_constraintTop_toBottomOf="@+id/fruitimage" />

            <TextView
                android:id="@+id/buyfruitnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fruitdisc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/gradient1"
                android:fontFamily="@font/david_libre"
                android:padding="10dp"
                android:text="Buy Now"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                app:layout_constraintEnd_toEndOf="@+id/saving"
                app:layout_constraintTop_toBottomOf="@+id/saving" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/david_libre"
                android:padding="2dp"
                android:text="Quantity"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/fruitname"
                app:layout_constraintTop_toBottomOf="@+id/fruitname" />

            <TextView
                android:id="@+id/fruitunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/david_libre"
                android:text="Unit"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/quantity"
                app:layout_constraintHorizontal_bias="0.433"
                app:layout_constraintStart_toStartOf="@+id/quantity"
                app:layout_constraintTop_toBottomOf="@+id/quantity" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>